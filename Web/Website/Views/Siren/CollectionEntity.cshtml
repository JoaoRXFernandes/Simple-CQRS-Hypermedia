<div class="container">
    <div data-bind="if: $data.isVisible()">
        <div class="row text-center">
            <h2 data-bind="text: $data.title" style="text-transform: capitalize;"></h2>
            <br />
        </div>

        <table data-bind="if: $data.entities().length > 0" class="table table-striped table-bordered text-center wow fadeInUp animated" data-wow-delay=".5s">
            <thead data-bind="with: $data.entities()[0]">
                <tr>
                    <!-- ko foreachproperty: $data.properties -->
                    <th class="text-center" data-bind="text: $data.key" style="text-transform: capitalize;"></th>
                    <!-- /ko -->
                    <!-- ko if: $data.deleteAction() -->
                    <th></th>
                    <!-- /ko -->
                </tr>
            </thead>
            <tbody data-bind="foreach: $data.entities">
                <tr>
                    <!-- ko foreachproperty: $data.properties -->
                    <td data-bind="text: $data.value, click: $parent.detailsLink().execute.bind($parent.detailsLink())"></td>
                    <!-- /ko -->
                    <!-- ko if: $data.deleteAction() -->
                    <td><a href="#" data-bind="click: $data.deleteAction().execute.bind($data.deleteAction())">Delete</a></td>
                    <!-- /ko -->
                </tr>
            </tbody>
        </table>

        <div data-bind="if: $data.entities().length > 0" class="text-center wow fadeInUp animated" data-wow-delay="1.5s">
            <br />
            <span data-bind="text: $data.properties['page Details']"></span>
        </div>

        <div data-bind="if: $data.entities().length == 0" class="text-center wow fadeInUp animated" data-wow-delay="1.5s">
            <span>No items</span>
        </div>
    </div>

    <div class="text-center wow fadeInUp animated" data-wow-delay="3s">
        <div class="row">
            @Html.Partial(Url.Content("siren/links.cshtml"))
        </div>

        <div class="row">
            @Html.Partial(Url.Content("siren/actions.cshtml"))
        </div>
    </div>
</div>